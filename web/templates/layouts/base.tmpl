{{ define "base.tmpl" }}
<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ .PageTitle }}</title>
    <link rel="stylesheet" href="/static/css/main_v2.css">
</head>
<body>
<header class="top-bar">
    <div class="top-bar-content">
        <a href="/mergenator" class="menu-link{{ if eq .CurPage "mergenator" }} active{{ end }}">Мерженатор</a>
        <div class="sep"></div>
        <a href="/tools" class="menu-link{{ if eq .CurPage "tools" }} active{{ end }}">Tools</a>
    </div>
</header>
<div class="main-content">
    {{ if eq .CurPage "mergenator" }}
        {{ block "mergenator" . }}{{ end }}
    {{ end }}
    {{ if eq .CurPage "tools" }}
        {{ block "tools" . }}{{ end }}
    {{ end }}
</div>
<script src="/static/js/main.js"></script>
</body>
</html>
{{ end }}