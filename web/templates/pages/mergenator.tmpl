{{ template "base.tmpl" . }}
{{ define "mergenator" }}
    <div class="forms">
        <div class="forms-container">
            <!-- Форма для Backend -->
            <div class="form-card">
                <h2>Backend</h2>
                <form action="/merge" id="mergeFormBackend" method="POST" class="merge-form">
                    <label for="source_branch_backend">Ветка Git</label>
                    <input type="hidden" name="repo" value="backend">
                    <input
                            type="text"
                            id="source_branch_backend"
                            name="source_branch"
                            placeholder="Введите название ветки"
                            required
                    >
                    <div class="button-group">
                        <button type="submit" name="action" value="createMR">Создать MR</button>
                        <button type="submit" name="action" value="merge" disabled style="cursor:not-allowed;transform:none;">Смержить</button>
                    </div>
                </form>
            </div>

            <!-- Форма для Frontend -->
            <div class="form-card">
                <h2>Frontend</h2>
                <form action="/merge" id="mergeFormFrontend" method="POST" class="merge-form">
                    <label for="source_branch_frontend">Ветка Git</label>
                    <input type="hidden" name="repo" value="frontend">
                    <input
                            type="text"
                            id="source_branch_frontend"
                            name="source_branch"
                            placeholder="Введите название ветки"
                            required
                    >
                    <div class="button-group">
                        <button type="submit" name="action" value="createMR">Создать MR</button>
                        <button type="submit" name="action" value="merge" disabled style="cursor:not-allowed;transform:none;">Смержить</button>
                    </div>
                </form>
            </div>
        </div>
        <div class="messages-container">
            <pre id="output"></pre>
        </div>
    </div>
{{ end }}
